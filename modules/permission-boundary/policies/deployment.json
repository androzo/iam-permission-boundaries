{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowTaggedResources",
      "Effect": "Allow",
      "Action": "*",
      "Resource": "*",
      "Condition": {
        "StringEqualsIfExists": {
          "aws:ResourceTag/team": "${team}"
        }
      }
    },
    {
      "Sid": "AllowSpecificS3Bucket",
      "Effect": "Allow",
      "Action": "*",
      "Resource": [
        "arn:aws:s3:::androzo-terraform-tfstate",
        "arn:aws:s3:::androzo-terraform-tfstate/*"
      ]
    },
    {
      "Sid": "DenyUntaggedResourcesExceptS3",
      "Effect": "Deny",
      "Action": "*",
      "NotResource": [
        "arn:aws:s3:::androzo-terraform-tfstate",
        "arn:aws:s3:::androzo-terraform-tfstate/*"
      ],
      "Condition": {
        "StringNotEqualsIfExists": {
          "aws:ResourceTag/team": "${team}"
        }
      }
    },
    {
      "Sid": "DenyDangerousActions",
      "Effect": "Deny",
      "Action": [
        "iam:Delete*",
        "iam:UpdateAssumeRolePolicy",
        "iam:PutRolePermissionsBoundary",
        "organizations:*",
        "account:*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "ConditionalPassRole",
      "Effect": "Deny",
      "Action": "iam:PassRole",
      "Resource": "*",
      "Condition": {
        "StringNotLike": {
          "iam:PassedToService": [
            "ec2.amazonaws.com",
            "lambda.amazonaws.com",
            "ecs-tasks.amazonaws.com"
          ]
        },
        "ArnNotLikeIfExists": {
          "aws:PrincipalArn": "arn:aws:iam::*:role/${team}-deployment-role"
        }
      }
    }
  ]
}